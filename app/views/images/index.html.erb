<div class="container">
	<% if user_signed_in?  %>
			<h1 style="text-align: center;">Sholgram</h1>
			
			<div class="row">
				<div class="col-4">
					
				</div>
				<div class="col-8">
					<h1><%= current_user.name %></h1>
					<div>
						<ul class="nav">
							<li class="margin-right">
								<p> <strong><%= @images.count %></strong> publicaciones</p>
							</li>
							<li class="margin-right">
								<p> <strong> <%= rand(1000)%> </strong> seguidores</p>
							</li>
							<li class="margin-right">
								<p> <strong> <%= rand(700) %> </strong> seguidos</p>
							</li>
							
						</ul>
					</div>
				</div>
			</div>
			<div class="row">
				<%= render @images %>
			</div>
			<%= will_paginate @images %>
		<% else %>
			<h1 align="center">Sholgram</h1>
		<% end %>
</div>
